<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:gravity="left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        >


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E3E1E1"
            android:text="Home"
            android:textSize="30sp"
            android:layout_weight="100"
            android:textStyle="normal"


            />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size"
            android:background="@color/black"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_share"
            android:background="@color/black"/>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:paddingLeft="15dp"
            >
            <TextView
                android:id="@+id/textViewLinea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#938D8D"
                android:text="@string/_"
                android:textSize="10sp"
                />



        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/imageViewR1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/rick60" />
                    <ImageView
                        android:id="@+id/imageViewB1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/bigbang60"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/imageViewG1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/got60"
                        android:layout_marginLeft="10dp"
                        />

                    
                </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"

                    >
                    <ImageView
                        android:id="@+id/imageViewB2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/bigbang60"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/imageViewG2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/got60"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/imageViewR2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/rick60"
                        />


                </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="#1C1C1C"

                >
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#E3E1E1"
                    android:text="SEGUIR VIENDO >"
                    android:textSize="29sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#938D8D"
                    android:text="@string/_"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"/>

        <HorizontalScrollView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    >

                    <ImageView
                        android:id="@+id/imageViewR3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/rick30" />
                    <ImageView
                        android:id="@+id/imageViewB3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/bigbang30"

                        />
                    <ImageView
                        android:id="@+id/imageViewG3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/got30"
                        />
                </LinearLayout>


        </HorizontalScrollView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#E3E1E1"
                android:text="TENDENCIAS >"
                android:textSize="29sp"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#938D8D"
                android:text="@string/_"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                />

            <HorizontalScrollView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    >
                    <ImageView
                        android:id="@+id/imageViewB4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/bigbang30"

                        />
                    <ImageView
                        android:id="@+id/imageViewR4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/rick30" />

                    <ImageView
                        android:id="@+id/imageViewG4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/got30"
                        />


                </LinearLayout>


            </HorizontalScrollView>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#E3E1E1"
                android:text="ESTRENOS >"
                android:textSize="29sp"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textColor="#938D8D"
                android:text="@string/_"
                android:textSize="10sp"/>

            <HorizontalScrollView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    >

                    <ImageView
                        android:id="@+id/imageViewG5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/got30" />

                    <ImageView
                        android:id="@+id/imageViewR5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/rick30" />
                    <ImageView
                        android:id="@+id/imageViewB5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@mipmap/bigbang30"

                        />



                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>

        </LinearLayout>


    </ScrollView>


    <include layout="@layout/item_pelicula_layout"
        android:id="@+id/nuevoly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

</LinearLayout>

